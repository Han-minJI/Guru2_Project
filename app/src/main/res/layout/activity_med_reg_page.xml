<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedRegPage">
    <!-- 약 이름 입력하기 전에 설명해주는 TextView -->
    <TextView
        android:id="@+id/medNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:text="어떤 약을 드시나요?"
        app:layout_constraintBottom_toTopOf="@+id/edtMedName"
        app:layout_constraintStart_toStartOf="@+id/edtMedName" />

    <!-- 복용약 이름 입력 -->
    <EditText
        android:id="@+id/edtMedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="약 이름 입력"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="@+id/medNameTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 요일 선택하기 전에 설명해주는 TextView -->
    <TextView
        android:id="@+id/dayOfWeekTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="62dp"
        android:text="요일을 선택해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMedName" />

    <!-- 모든 요일 선택하는 버튼 (매일) -->
    <Switch
        android:id="@+id/switchDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:text="매일"
        app:layout_constraintBottom_toTopOf="@+id/cGroupDayOfWeek"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 요일 개별 선택 Chip 버튼을 위한 ChipGroup -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cGroupDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayOfWeekTxt">

        <!-- 일요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipSun"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일" />

        <!-- 월요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipMon"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월" />

        <!-- 화요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTue"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화" />

        <!-- 수요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipWed"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수" />

        <!-- 목요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipThur"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목" />

        <!-- 금요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipFri"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금" />

        <!-- 토요일 선택 Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipSat"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토" />

    </com.google.android.material.chip.ChipGroup>

    <!-- 복약 예정 시간 입력하기 전 설명해주는 TextView -->
    <TextView
        android:id="@+id/medTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="41dp"
        android:text="몇 시에 드시는 약인가요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cGroupDayOfWeek" />

    <!-- 복약 예정 시간 입력 -->
    <EditText
        android:id="@+id/edtMedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="시간 선택"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/medTimeTxt"
        app:layout_constraintTop_toBottomOf="@+id/medTimeTxt" />

    <!-- "등록하기" 버튼 : MedLstPage(복약 리스트 화면)으로 이동 -->
    <Button
        android:id="@+id/btnMedReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

</androidx.constraintlayout.widget.ConstraintLayout>