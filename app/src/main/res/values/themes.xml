<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GURU2_DANO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GURU2_DANO" parent="Base.Theme.GURU2_DANO" />

    <style name="fontnavy">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1D2E4A</item>
    </style>

    <style name="font1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="font2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="font3">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="dano">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>

    <style name="smalldano">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@color/calendar_title</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/pretendardvariable</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_title</item>
        <item name="fontFamily">@font/pretendardvariable</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_title</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/pretendardvariable</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/calendar_title</item>
        <item name="fontFamily">@font/pretendardvariable</item>
    </style>

    <!-- MedRegPage.kt의 TimePickerDialog 스타일을 Spinner 형태로 바꾸기 위한 것 -->
    <style name="MedRegTimePickerTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!-- MedRegPage.kt의 chip 선택 스타일을 적용을 위한 코드 -->
    <style name="med_reg_chip_theme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipBackgroundColor">@color/med_reg_chip_color</item>
        <item name="chipSurfaceColor">@color/med_reg_chip_color</item>
        <item name="android:textColor">@color/med_chip_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 스피너 커스텀-->
    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor"> false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">@drawable/spinner_background</item>
    </style>

    <!-- 마이페이지 "아직 마치지 못한 일" TextView 스타일 -->
    <style name="mypage_todo_title_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 마이페이지 todoList TextView 스타일 -->
    <style name="mypage_todo_txt_theme">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/pretendardvariable</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>

